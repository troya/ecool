<h1>New profile</h1>

<% form_for(@profile) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :main_privacy %><br />
    <%= f.text_field :main_privacy %>
  </p>
  <p>
    <%= f.label :friends_list_privacy %><br />
    <%= f.text_field :friends_list_privacy %>
  </p>
  <p>
    <%= f.label :email_privacy %><br />
    <%= f.text_field :email_privacy %>
  </p>
  <p>
    <%= f.label :comments_privacy %><br />
    <%= f.text_field :comments_privacy %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :desc %><br />
    <%= f.text_area :desc %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', profiles_path %>