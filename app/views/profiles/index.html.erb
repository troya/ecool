<h1>Listing profiles</h1>

<table>
  <tr>
    <th>Main privacy</th>
    <th>Friends list privacy</th>
    <th>Email privacy</th>
    <th>Comments privacy</th>
    <th>Address</th>
    <th>City</th>
    <th>Desc</th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%=h profile.main_privacy %></td>
    <td><%=h profile.friends_list_privacy %></td>
    <td><%=h profile.email_privacy %></td>
    <td><%=h profile.comments_privacy %></td>
    <td><%=h profile.address %></td>
    <td><%=h profile.city %></td>
    <td><%=h profile.desc %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New profile', new_profile_path %>